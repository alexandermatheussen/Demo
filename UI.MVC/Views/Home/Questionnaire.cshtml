@using Domain
@model IEnumerable<Domain.Question>

<h1>Questionnaire</h1>

<table class="table">
    @foreach (var item in Model)
    {
        if (item.questionType == QuestionType.OPEN_QUESTION)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.question) <br>
                    <textarea></textarea>
                </td>
            </tr>
        }
        if (item.questionType == QuestionType.CHECK_BOX)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.question) <br>
                    @foreach (var option in item.options)
                    {
                        <input type="radio" name="optionCheckBox" value="optionCheckBox">@Html.DisplayFor(modelItem => option.option)<br>
                    }
                </td>
            </tr>
        }
        if (item.questionType == QuestionType.RADIO_BUTTON)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.question) <br>
                    @foreach (var option in item.options)
                    {
                        <input type="radio" name="optionCheckRadio" value="optionRadio">@Html.DisplayFor(modelItem => option.option)<br>
                    }
                </td>
            </tr>
        }
        if (item.questionType == QuestionType.MAILADDRESS)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.question) <br>
                    <input type="text" name="email">
                </td>
            </tr>
        }
        if (item.questionType == QuestionType.DROPDOWN)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.question) <br>
                    <select>
                        @foreach (var option in item.options)
                        {
                            <option value="OptionDropDown" name="optionDropDown">@Html.DisplayFor(modelItem => option.option)</option>
                        }
                        </select>
                </td>
            </tr>
        }
    }
</table>
<input class="btn" type="submit" value="Submit">