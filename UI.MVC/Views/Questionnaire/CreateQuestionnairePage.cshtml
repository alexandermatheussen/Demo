@using Domain
@model QuestionnaireQuestion

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="~/js/dynamicForm.js" asp-append-version="true"></script>


<body>


    @using (Html.BeginForm("CreateQuestionnaire", "Questionnaire", FormMethod.Post))
    {


        <div class="container">
            <div class="d-flex justify-content-center">
                <div class="card text-dark bg-success text-center">

                    <div class="card-body ">
                        <h3 class="text-center text-light">Make a Questionnaire</h3>
                        <hr />
                        <input asp-for="projectId" type="hidden">
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <input asp-for="questionnaire.name" type="text" class="form-control" placeholder="Name">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <button type="button" id="btnAddField">Add Question</button>
                                    @Html.AntiForgeryToken()
                                    <div id="fields"></div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create new questionnaire" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
