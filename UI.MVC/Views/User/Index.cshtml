@using Domain
@model IEnumerable<Domain.User>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>User overview screen</h2>


<table class="table">
    <tr>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email address</th>
        <th>Password</th>
        <th>Gender</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (User user in Model)
    {
        <tr>
            <td>@user.firstName</td>
            <td>@user.lastName</td>
            <td>@user.eMailAddress</td>
            <td>@user.password</td>
            <td>@user.gender</td>
            <td><a asp-action="Edit" asp-route-id="@user.id">Edit</a></td>
            <td><a asp-action="Password" asp-route-id="@user.id">Change password</a></td>
        </tr>
    }
</table>

