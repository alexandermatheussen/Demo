@model EditPasswordViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Change your password</h2>

<form asp-controller="User" asp-action="Password" method="post">
    <div class="form-group">
        <label asp-for="oldPassword">Old password</label><input asp-for="oldPassword" class="form-control"/>
        <span asp-validation-for="oldPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="newPassword">New password</label><input asp-for="newPassword" class="form-control"/>
        <span asp-validation-for="newPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="newConfirmedPassword">Email address</label><input asp-for="newConfirmedPassword" class="form-control"/>
        <span asp-validation-for="newConfirmedPassword" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="submit" value="Save"/> | <a asp-action="Index">Cancel</a>
</form>


